            </div>
        </div>

    </div>

</div>
<!-- /content -->

<!-- Modal Form Make 1 -->
<div id="modal_form_make_1" class="modal fade" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h5 class="modal-title">แบบตรวจสอบรายการครุภัณฑ์ก่อนเข้าพัก</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <form action="#">
                <div class="modal-body">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-12">
                                <dl class="row mb-0">
                                    <dt class="col-sm-2">อาคาร</dt>
                                    <dd class="col-sm-10">อาคารที่พักข้าราชการศาลยุติธรรม ซอยเสนานิคม 1</dd>
        
                                    <dt class="col-sm-2">ห้องที่</dt>
                                    <dd class="col-sm-4">A110</dd>
                                    <dt class="col-sm-2">ตึก</dt>
                                    <dd class="col-sm-4">อาคาร A</dd>

                                    <dt class="col-sm-2">วันที่</dt>
                                    <dd class="col-sm-10">30 มีนาคม 2561</dd>
                                </dl>
                            </div>
                        </div>
                    </div>

                    <div class="form-group bg-info">
                        <div class="row">
                            <div class="col-sm-12 pt-2 text-center">
                                <label>รายการตรวจสอบครุภัณฑ์ จำนวน 15 รายการ</label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-12">
                                <table class="table table-bordered table-striped table-sm">
                                    <thead class="bg-dark">
                                        <tr>
                                            <th style="width: 20px;" class="text-center">#</th>
                                            <th class="text-center">รายการ</th>
                                            <th class="text-center">จำนวน</th>
                                            <th class="text-center"style="width: 80px;">ผ่าน</th>
                                            <th class="text-center"style="width: 80px;">ไม่ผ่าน</th>
                                            <th class="text-center">หมายเหตุ</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% 
                                            const materialList = [
                                                {title:'ประตู', count:4},
                                                {title:'ประตูห้องน้ำ', count:1},
                                                {title:'หน้าต่าง', count:6},
                                                {title:'ตู้เสื้อผ้า', count:1},
                                                {title:'โต๊ะ', count:1},
                                                {title:'เก้าอี้', count:4},
                                                {title:'โซฟา', count:1},
                                                {title:'โต๊ะกระจก', count:1},
                                                {title:'ชั้นวางรองเท้า', count:1},
                                                {title:'เคาท์เตอร์ทำครัว', count:1},
                                                {title:'เตาไฟฟ้า', count:2},
                                                {title:'เครื่องสุขภัณฑ์', count:1},
                                                {title:'ฝักบัว', count:1},
                                                {title:'เตียง', count:1},
                                                {title:'แอร์', count:1},
                                            ]

                                            materialList.forEach((item, index)=>{
                                        %>
                                        <tr>
                                            <th style="width: 20px;" class="text-center"><%=index+1 %></th>
                                            <th class="text-center"><%=item.title %></th>
                                            <th class="text-center"><%=item.count %></th>
                                            <th ><input type="radio" class="ml-2" name="list-<%=index %>"></th>
                                            <th ><input type="radio" class="ml-2" name="list-<%=index %>"></th>
                                            <th class="text-center"><input type="text" class="form-control form-control-sm"placeholder="หมายเหตุ"></th>
                                        </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-link" data-dismiss="modal">ปิด</button>
                    <button type="reset" class="btn bg-danger">รีเซ็ตแบบ</button>
                    <button type="submit" class="btn bg-primary">บันทึกข้อมูล</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- In page script -->
<script>
    $(() => {
        // Event : button make 1
        $("#btn_make_1").click(() => {
            $('#modal_form_make_1').modal('show')
        })
    })
</script>

