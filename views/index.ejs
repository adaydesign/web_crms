<%- include('__header') %>
<%- include('__header_end') %>

<!-- content -->
<div class="row mt-3">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header header-elements-inline bg-primary">
                <h6 class="card-title"># ระบบบริหารบ้านพักสวัสดิการข้าราชการศาลยุติธรรม (กรุงเทพมหานคร)</h6>
            </div>
            <div class="card-body">
                <img src="/assets/images/backgrounds/pic1.jpg" width="100%">
            </div>
            <div class="card-footer text-center">
                <a class="btn btn-danger" href="/appform/register"><i class="icon-clipboard4 mr-2"></i>ยื่นใบคำร้องขอเข้าพักอาศัย !!</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header header-elements-inline bg-info">
                <h6 class="card-title"><%= show_login ? "# เข้าสู่ระบบ": "# ยินดีต้อนรับ" %></h6>
            </div>
            <div class="card-body py-0">
                <% if(show_login){ %>
                    <form method="POST" action="login" class="mt-3">
                        <div class="row form-group">
                            <label class="col-form-label  col-3">ชื่อผู้ใช้</label>
                            <div class="col-9">
                                <input type="text" name="username" class="form-control" required>
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-form-label col-3">รหัสผ่าน</label>
                            <div class="col-9">
                                <input type="password" name="password" class="form-control" required>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col text-center">
                                <button class="btn btn-primary"><i class="icon-pencil7 mr-2"></i>ลงชื่อเข้าสู่ระบบ</button>
                            </div>
                        </div>
                    </form>
                <% } else { %>
                    <div class="row mt-3">
                        <div class="col">
                            <p>คุณ <strong><%=user.fullname %></strong></p>
                            <p><%= new Date() %></p>
                        </div>
                    </div>
                    
                <% } %>
            </div>
        </div>
    </div>
</div>
<!-- /content -->

<%- include('__footer') %>